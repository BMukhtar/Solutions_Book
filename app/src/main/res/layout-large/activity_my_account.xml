<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="mukhtar.exapple.com.solutions_book.MyAccount"
   >

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/changeSurname"
        android:background="@drawable/edit"
        android:layout_alignLeft="@+id/changeName"
        android:layout_alignStart="@+id/changeName"
        android:layout_alignTop="@+id/surnametext"
        android:layout_alignBottom="@+id/surnametext"
        android:layout_alignRight="@+id/changeName"
        android:layout_alignEnd="@+id/changeName"
        android:onClick="changesurname"/>

    <TextView
        android:text="Surname:"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="15dp"

        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="some text"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:id="@+id/surnametext"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/changetext2"
        android:layout_alignStart="@+id/changetext2"
        android:layout_alignBottom="@+id/textView6" />

    <TextView
        android:text="Change pas:"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Name:"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:id="@+id/textView5"
        android:textSize="15dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/nametext"
        android:text="some text"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/surnametext"
        android:layout_alignStart="@+id/surnametext"
        android:layout_alignTop="@+id/textView5"
        android:layout_width="150dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/addava"
        android:id="@+id/imageView"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/changeName"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/upload"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit"

        android:layout_marginEnd="24dp"
        android:layout_alignBottom="@+id/imageView"
        android:onClick="upload"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/changeName"
        android:background="@drawable/edit"

        android:layout_alignTop="@+id/nametext"
        android:layout_alignLeft="@+id/upload"
        android:layout_alignStart="@+id/upload"
        android:layout_alignBottom="@+id/nametext"
        android:onClick="changename"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/changetext2"
        android:text="some text"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/textView7" />

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/changePas"
        android:background="@drawable/tickimg"
        android:layout_alignTop="@+id/changetext2"
        android:layout_alignLeft="@+id/changeSurname"
        android:layout_alignStart="@+id/changeSurname"
        android:layout_alignBottom="@+id/changetext2"
        android:onClick="changePas"/>

    <Button
        android:text="Save"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@drawable/tick"
        android:textColor="@color/white"
        android:id="@+id/save"
        android:layout_below="@+id/changetext1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/changetext1"
        android:text="some text"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/changetext2"
        android:layout_alignStart="@+id/changetext2" />

    <Button
        android:text="Delete Account"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/delete"
        android:background="@drawable/delbutton"
        android:textColor="@color/white"
        android:layout_below="@+id/save"
        android:layout_alignLeft="@+id/save"
        android:layout_alignStart="@+id/save"
        android:layout_marginTop="67dp" />


</RelativeLayout>

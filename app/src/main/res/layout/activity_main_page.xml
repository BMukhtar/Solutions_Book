<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:background="@drawable/myaccount1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/my_account"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="My Account"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:id="@+id/textView" />

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Categories"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="195dp"
        android:textColor="@color/white"/>

    <ImageView
        android:background="@drawable/mybooks1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/my_books"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/my_account"
        android:layout_alignLeft="@+id/my_account"
        android:layout_alignStart="@+id/my_account" />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="My Books"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:id="@+id/textView3" />

    <ImageView
        android:background="@drawable/mysolutions1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/my_solution"
        android:layout_alignTop="@+id/my_books"
        android:layout_toRightOf="@+id/my_books"
        android:layout_toEndOf="@+id/my_books"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="My Solutions"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="195dp"
        android:textColor="@color/white"/>

    <ImageView
        android:background="@drawable/search1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/search_image"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/my_solution"
        android:layout_toStartOf="@+id/my_solution" />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Search"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"
        android:id="@+id/textView2" />

    <ImageView
        android:background="@drawable/exit1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/exit_image"
        android:layout_alignBottom="@+id/search_image"
        android:layout_alignRight="@+id/my_solution"
        android:layout_alignEnd="@+id/my_solution"
        />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Exit"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="225dp"
        android:textColor="@color/white"/>

    <ImageView
        android:background="@drawable/categories1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/categories_image"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/my_solution"
        android:layout_alignStart="@+id/my_solution" />
</RelativeLayout>